// to use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

$colors_highlight_red = #ED1C24
$colors_map_1 = #4D4D4F
$colors_map_2 = #939598
$colors_map_3 = #E7E6DD
$colors_bw_4 = #DEDFE0

$benton = 'Benton', Helvetica, Arial, sans-serif
$sansSerif = Helvetica, Arial, sans-serif

.scene-maker.scene
	width 100%
	height 0
	padding-bottom 50%
	position relative
	
	svg
		position absolute
		top 0
		left 0
	
	.map
		path
			fill $colors_map_3
			fill-opacity 0.5
	
	.bubbles
		circle.none
			fill $colors_bw_4
			stroke @fill
		circle.some
			fill darken($colors_highlight_red, 25%)
			fill-opacity 0.35
			stroke darken(@fill, 50%)
			stroke-width 0.25px
			
	.histogram
		rect
			shape-rendering crispEdges
			fill darken($colors_highlight_red, 25%)
			&.zero
				fill $colors_map_3
				

	.axis
		shape-rendering crispEdges
		
		&.x
			path,
			line
				fill none
				stroke $colors_map_2

		&.y
			path.domain
				fill none
				stroke none
			line
				fill none
				stroke white
				// stroke red
				// stroke none
				// stroke none
				// stroke red
		
		text
			font-family $sansSerif
			font-size 10px
