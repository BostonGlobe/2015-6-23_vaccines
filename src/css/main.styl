// to use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

$colors_highlight_red = #ED1C24
$colors_map_3 = #E7E6DD
$colors_bw_4 = #DEDFE0

.scene-maker.scene
	width 100%
	height 0
	padding-bottom 50%
	border solid red 1px
	position relative
	
	svg
		position absolute
		top 0
		left 0
	
	.map
		path
			fill $colors_map_3
			fill-opacity 0.5
	
	.bubbles
		circle
			fill darken($colors_highlight_red, 25%)
			fill-opacity 0.35
			stroke darken(@fill, 50%)
			stroke-width 0.25px
			
	.histogram
		rect
			shape-rendering crispEdges
